<form method="post" action="admin-add-question" class="container">
    <div class="mb-3">
        <label for="block-select" class="form-label">Выберите блок вопросов для добавления:</label>
            <select name="block-id" class="form-select" id="block-select" required>
                <% for (let i = 0; i < blocks.length; i++) {%>
                    <option value="<%= blocks[i].block_id %>"><%= blocks[i].title %></option>
                <%}%>
            </select>
    </div>
    <div class="mb-3">
        <label for="question" class="form-label">Введите текст вопроса:</label>
        <textarea name="question-text" class="form-control" id="question" required></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Введите ответы одной строкой с разделителем '###':</label>
        <textarea name="answers" class="form-control" required></textarea>
    </div>
    <div class="d-grid gap-2 col-4 mx-auto my-4">
        <button type="submit" class="btn btn-primary">Отправить</button>
    </div>
</form>
<form method="post" action="admin-logout">
    <div class="d-grid gap-2 col-4 mx-auto my-4">
        <button type="submit" class="btn btn-primary">Выйти из панели администратора</button>
    </div>
</form>