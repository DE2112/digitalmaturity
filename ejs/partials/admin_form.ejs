<form method="post" action="admin" class="container">
    <div class="mb-3">
        <label for="login-input" class="form-label">Логин</label>
        <input type="text" class="form-control" name="admin-login" id="login-input" required>
    </div>
    <div class="mb-3">
        <label for="password-input" class="form-label">Пароль</label>
        <input type="password" class="form-control" name="admin-password" id="password-input" required>
    </div>
    <button type="submit" class="btn btn-primary">Отправить</button>
</form>